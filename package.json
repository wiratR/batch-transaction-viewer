{
  "name": "batch-transaction-viewer",
  "version": "1.0.1",
  "private": true,
  "description": "Split-pane batch transaction XML viewer (fields left, data right)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.batchtxnviewer",
    "productName": "Batch Transaction Viewer",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "assets/**"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}